  {erlsom, ".*", {git, "http://github.com/willemdj/erlsom.git", {tag, "bc48604f7a74440da66aa7dba95a3bf634fdf138"}}},
  {ranch, "1.0.*", {git, "https://github.com/extend/ranch.git", {tag, "1.0.0"}}},
